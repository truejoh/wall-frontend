{
  "overrides": [
    {
      "files": [
        ".prettierrc",
        ".babelrc",
        ".eslintrc",
        ".stylelintrc",
        ".huskyrc",
        ".lintstagedrc"
      ],
      "options": {
        "parser": "json"
      }
    }
  ],
  "useTabs": false,
  "tabWidth": 2,
  "arrowParens": "always",
  "endOfLine": "lf",
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all"
}